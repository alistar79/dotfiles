#   class { '__puppet_fqcn__':
#       par1 => '256MB',
#   }
#
# [Remember: No empty lines between comments and class definition]
class __puppet_fqcn__ (
    $par1 = 'default',
    $packages = $__puppet_fqcn__::params::packages,
  ) inherits __puppet_fqcn__::params {

  File {
    ensure => file,
    owner  => 'root',
    group  => 'root',
    mode   => '0640',
  }

  anchor { '__puppet_fqcn__::start': } ->
  class { '__puppet_fqcn__::install': } ~>
  class { '__puppet_fqcn__::config': } ~>
  class { '__puppet_fqcn__::service': } ->
  anchor { '__puppet_fqcn__::end': }

  # Define: add
  #   Example for define
  #
  # == Parameters
  #
  #   $par1
  #     val1|val2|val3
  #     Description
  #
  # == Examples
  #
  #   __puppet_fqcn__::add{'name':
  #     par1 => 'val',
  #   }
  #
  define add (
    $par1 = 'default',
  ) {

    File {
      ensure  => file,
      owner   => 'root',
      group   => 'root',
      mode    => '0640',
      notify  => undef,
      require => undef,
    }
    Exec {
      notify  => undef,
      require => undef,
    }
  }
}
